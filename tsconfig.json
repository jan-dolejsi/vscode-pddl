{
	"compilerOptions": {
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,		
		"target": "ES2019",
		"lib": [
			"es2019",
			"DOM" // because of he pddl-gantt dependency
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"rootDir": "src",
		"outDir": "out",
		"declaration": true, // api for webview
		"sourceMap": true,
		"skipLibCheck": true,
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"views",
		"out"
	]
}